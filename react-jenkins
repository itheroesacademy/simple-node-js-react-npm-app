
pipeline {
    agent any

        tools {
            nodejs "nodejs"
        }
    

    stages {
    
            stage('Git Checkout') {
             steps {
           checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/sumeetverma07/simple-node-js-react-npm-app.git']])
            }

         stage('Docker Build') {
            steps {
                sh 'docker build -t java .'
                }

            }
        }
    }
}
